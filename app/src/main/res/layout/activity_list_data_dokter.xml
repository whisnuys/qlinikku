<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListDataDokter">

    <TextView
        android:id="@+id/listDataTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="List Dokter"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#121212"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etSearchDokter"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/listDataTitle"
        android:layout_marginLeft="20dp"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:hint="Cari..."
        android:inputType="textPersonName" />

    <ListView
        android:id="@+id/datalistDokter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/etSearchDokter" />
</RelativeLayout>